<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScientMeetApp.Pages.HomePage"
             Title="Home Page"
             Shell.NavBarIsVisible="False"
             >
    <VerticalStackLayout>
        <ScrollView Margin="20,30,20,20">
            <Frame CornerRadius="40" HeightRequest="50">
            <Grid ColumnDefinitions="Auto,Auto">
                
                <Image Source="chercher.png" WidthRequest="20" Margin="90,0,5,0"/>

                <Frame BackgroundColor="#ffffff"
                       BorderColor="Transparent"
                       Grid.Column="1"
                       Margin="0"
                       Padding="3"
                       HeightRequest="15"
                       WidthRequest="140"
                       CornerRadius="30">
                    <Entry WidthRequest="140" />
                </Frame>
            </Grid>
            </Frame>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>